{
  "name": "saidiabay-platform",
  "version": "1.0.0",
  "private": true,
  "description": "SaidiaBay Real Estate Platform - Monorepo",
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail --handle-input --names \"API,ADMIN,WEB\" --prefix-colors \"blue,green,yellow\" \"npm run dev:api\" \"npm run dev:admin\" \"npm run dev:web\"",
    "dev:api": "cd backend && npm run dev:server",
    "dev:admin": "cd backend && npm run dev:next",
    "dev:web": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:api && npm run build:admin && npm run build:web",
    "build:api": "cd backend && npm run build",
    "build:admin": "cd backend && npm run build",
    "build:web": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:admin\" \"npm run start:web\"",
    "start:api": "cd backend && npm run start",
    "start:admin": "cd backend && npm run start",
    "start:web": "cd frontend && npm run start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "prisma:generate": "cd backend && npm run prisma:generate",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "prisma:push": "cd backend && npm run prisma:push",
    "prisma:seed": "cd backend && npm run prisma:seed",
    "prisma:studio": "cd backend && npm run prisma:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
